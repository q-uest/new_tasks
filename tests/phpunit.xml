<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
                 bootstrap="./Bootstrap.php"
                 backupGlobals="true"
                 colors="true">
        <testsuites>
                <testsuite name="CodeIgniter Application Test Suite">
                        <directory suffix="test.php">./</directory>
                </testsuite>
        </testsuites>
        <coverage>
                <include>
                        <directory suffix=".php">/var/www/html/prod/tasks/controllers/</directory>
                        <directory suffix=".php">/var/www/html/prod/tasks/models/</directory>
                        <directory suffix=".php">/var/www/html/prod/tasks/views/</directory>
                        <directory suffix=".php">/var/www/html/prod/tasks/libraries/</directory>
                        <directory suffix=".php">/var/www/html/prod/tasks/helpers/</directory>
                        <directory suffix=".php">/var/www/html/prod/tasks/hooks/</directory>
                </include>
                <report>
                        <html outputDirectory="build/coverage" lowUpperBound="0" highLowerBound="0"/>
                        <clover outputFile="build/logs/clover.xml"/>
                </report>
        </coverage>
</phpunit>
